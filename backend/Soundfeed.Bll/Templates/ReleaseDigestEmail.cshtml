@using Soundfeed.Bll.Models
@model EmailViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="margin: 0; padding: 0; font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif; background: #ffffff; color: #000000;">
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="background: #ffffff;">
        <tr>
            <td align="center" style="padding: 40px 20px;">
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="600" style="max-width: 600px; background: white;">
                    @if (!string.IsNullOrWhiteSpace(Model.LogoUrl))
                    {
                        <tr>
                            <td style="padding: 32px 32px 24px 32px; text-align: center;">
                                <img src="@Model.LogoUrl" alt="soundfeed" style="height: 80px; width: auto; display: block; margin: 0 auto;">
                            </td>
                        </tr>
                    }
                    <tr>
                        <td style="padding: 32px;">
                            <p style="font-size: 16px; color: #000000; margin: 0 0 24px 0; line-height: 1.5;">Hello there!<br>Your recent release(s):</p>

                            @foreach (var release in Model.Releases)
                            {
                                var date = release.ReleaseDate.ToString("MMM d, yyyy");

                                <table role="presentation" cellspacing="0" cellpadding="0" border="0" width="100%" style="margin-bottom: 32px;">
                                    <tr>
                                        <td width="120" valign="middle" style="padding-right: 20px;">
                                            @if (!string.IsNullOrWhiteSpace(release.CoverUrl))
                                            {
                                                <img src="@release.CoverUrl" alt="@release.Title" width="120" height="120" style="width: 120px; height: 120px; display: block;">
                                            }
                                        </td>
                                        <td valign="middle" height="120">
                                            <h3 style="font-size: 18px; font-weight: 600; color: #000000; margin: 0 0 4px 0; line-height: 1.3;">@release.Title</h3>
                                            <p style="font-size: 15px; color: #666666; margin: 0 0 8px 0; line-height: 1.4;">@release.ArtistName</p>
                                            <p style="font-size: 13px; color: #999999; margin: 0 0 4px 0;">@date</p>
                                            @if (!string.IsNullOrWhiteSpace(release.Label))
                                            {
                                                <p style="font-size: 13px; color: #999999; margin: 0 0 12px 0;">@release.Label</p>
                                            }
                                            <a href="@release.SpotifyUrl" style="font-size: 13px; color: #0066cc; text-decoration: underline;">Listen</a>
                                        </td>
                                    </tr>
                                </table>
                            }
                        </td>
                    </tr>

                    <tr>
                        <td style="padding: 0 32px 32px 32px; text-align: center;">
                            <p style="font-size: 12px; color: #999999; margin: 0; line-height: 1.5;">
                                You're receiving this because you subscribed to release notifications.<br>
                                <a href="@Model.FeedUrl" style="color: #666666; text-decoration: underline;">Manage preferences</a>
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</body>
</html>